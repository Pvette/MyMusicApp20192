<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.mymusicapp2019.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="This lists  Albums options by Genre"/>


    <Button
        android:id="@+id/jazz"
        style="@style/CategoryStyle"
        android:layout_width="259dp"
        android:background="@color/category_jazz"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="25dp"
        android:text="@string/category_jazz" />

    <Button
        android:id="@+id/pop"
        style="@style/CategoryStyle"
        android:layout_width="259dp"
        android:background="@color/category_pop"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="25dp"
        android:text="@string/category_pop" />

    <Button
        android:id="@+id/rock"
        style="@style/CategoryStyle"
        android:layout_width="259dp"
        android:textSize="30sp"
        android:background="@color/category_rock"
        android:textAlignment="center"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="16dp"
        android:text="@string/category_rock" />
</LinearLayout>